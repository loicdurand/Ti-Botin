{% if interface == "web" %}
<!DOCTYPE html>
<html lang="fr">
<body>
{% endif %}
<head>
	<title>{{title}}</title>

<style>

	.row:before,
	.row:after {
		display: table;
		content: "";
		clear: both;
	}

	.row {
		margin-left: -15px;
		margin-right: -15px;
	}


	.col {
		padding-left: 0;
		padding-right: 0;
		float: left;
		position: relative;
	}

	.avoid-break {
		page-break-inside: avoid;
	}

	.break-before {
		page-break-before: always;
	}

	main {
		font-size: 15px;
		margin: 1em;
	}

	h1 {
		text-align: center;
		font-size: 1em;
	}

	h1 a {
		position: relative;
	}

	h1 a svg {
		height: 1.2em;
		line-height: 1;
		position: absolute;
		left: 1ch;
		fill: red;
	}

	h2 {
		text-align: center;
		font-size: 1em;
	}

	table {
		border-collapse: collapse;
		background-color: transparent;
		width: 100%;
		text-align: center;
		border-spacing: 10px;
		margin: 1em;
		font-size: 12px;
	}

	table caption {
		display: none;
	}

	table td {
		padding: 5px 5px 5px 8px;
		background: white;
		border-spacing: 10px;
		text-align: center;
	}

	table thead td {
		/*background: var(--red-8);*/
		color: white;
		border: 1px solid var(--grey-8);
	}

	table th {
		background-color: #e0e0e0;
	}

	td,
	th {
		padding: 0.25em;
		line-height: 1.71428571;
		text-align: center;
		vertical-align: top;
		border: 1px solid;
	}
</style>
</head>

{% block body %}

	<main id="app">

		{% if interface == 'web' %}

			<h1>
				{{ title }}
				<a href="{{ path('export_pdf') }}" alt="Télécharger au format PDF" title="Télécharger au format PDF">
					<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24" fill="currentColor">
						<path d="M5 4H15V8H19V20H5V4ZM3.9985 2C3.44749 2 3 2.44405 3 2.9918V21.0082C3 21.5447 3.44476 22 3.9934 22H20.0066C20.5551 22 21 21.5489 21 20.9925L20.9997 7L16 2H3.9985ZM10.4999 7.5C10.4999 9.07749 10.0442 10.9373 9.27493 12.6534C8.50287 14.3757 7.46143 15.8502 6.37524 16.7191L7.55464 18.3321C10.4821 16.3804 13.7233 15.0421 16.8585 15.49L17.3162 13.5513C14.6435 12.6604 12.4999 9.98994 12.4999 7.5H10.4999ZM11.0999 13.4716C11.3673 12.8752 11.6042 12.2563 11.8037 11.6285C12.2753 12.3531 12.8553 13.0182 13.5101 13.5953C12.5283 13.7711 11.5665 14.0596 10.6352 14.4276C10.7999 14.1143 10.9551 13.7948 11.0999 13.4716Z"></path>
					</svg>
				</a>
			</h1>

		{% else %}

			<h1>{{ title }}</h1>

		{% endif %}

		{% for unite in unites %}

			<h2>{{ unite.name }}</h2>

			<table>
				<thead>
					<tr>
						<th scope="col">Fonction</th>
						<th scope="col">Grade</th>
						<th scope="col">Nom Prénom</th>
						<th scope="col">Spécificité</th>
						<th scope="col">Tph Fixe</th>
						<th scope="col">Néogend</th>
						<th scope="col">Mail</th>
					</tr>
				</thead>
				<tbody>
					{% for user in unite.users %}
						<tr>
							{% if user.fonction == 'C' %}
								<td>Commandant d'unité</td>
							{% elseif user.fonction == 'A' %}
								<td>Commandant d'unité en second</td>
							{% elseif user.fonction == 'E' %}
								<td></td>
							{% elseif user.fonction == 'S' %}
								<td>Second</td>
							{% else %}
								<td> {{ user.fonction }} </td>
							{% endif %}
							<td>{{ user.grade }}</td>
							<td>{{ user.nom ~ " " ~ user.prenom }}</td>
							<td>{{ user.qualification ~ (user.specificite != "" ? " " ~ user.specificite : "")}}</td>
							<td>{{ user.tph }}</td>
							<td>{{ user.port }}</td>
							<td>{{ user.mail }}</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

		{% endfor %}

	</main>

{% endblock %}
{% if interface == "web" %}
</body>
</html>
{% endif %}
