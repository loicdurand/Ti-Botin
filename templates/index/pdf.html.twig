<head>
	<title>{{title}}</title>

	<style>

		.row:before,
		.row:after {
			display: table;
			content: "";
			clear: both;
		}

		.row {
			margin-left: -15px;
			margin-right: -15px;
		}


		.col {
			padding-left: 0;
			padding-right: 0;
			float: left;
			position: relative;
		}

		.avoid-break {
			page-break-inside: avoid;
		}

		.break-before {
			page-break-before: always;
		}

		main {
			font-size: 15px;
			margin: 1em;
		}

		h1 {
			text-align: center;
			font-size: 1em;
		}

		h1 a {
			position: relative;
		}

		h1 a svg {
			height: 1.2em;
			line-height: 1;
			position: absolute;
			left: 1ch;
			fill: red;
		}

		h2 {
			text-align: center;
			font-size: 1em;
		}

		table {
			border-collapse: collapse;
			background-color: transparent;
			width: 100%;
			text-align: center;
			border-spacing: 10px;
			margin: 1em;
			font-size: 12px;
		}

		table caption {
			display: none;
		}

		table td {
			padding: 5px 5px 5px 8px;
			background: white;
			border-spacing: 10px;
			text-align: center;
		}

		table thead td {
			/*background: var(--red-8);*/
			color: white;
			border: 1px solid var(--grey-8);
		}

		table th {
			background-color: #e0e0e0;
		}

		td,
		th {
			padding: 0.25em;
			line-height: 1.71428571;
			text-align: center;
			vertical-align: top;
			border: 1px solid;
		}
	</style>
</head>

{% block body %}

	<main id="app">

		<h1>{{ title }}</h1>

		<ul class="tree">

			{% for unite in unites %}

				{% if unite.users | length > 0 %}

					<h2>{{ unite.name }}</h2>

					<table>
						<thead>
							<tr>
								<th scope="col">Fonction</th>
								<th scope="col">Grade</th>
								<th scope="col">Nom Prénom</th>
								<th scope="col">Spécificité</th>
								<th scope="col">Tph Fixe</th>
								<th scope="col">Néogend</th>
								<th scope="col">Mail</th>
							</tr>
						</thead>
						<tbody>
							{% for user in unite.users %}
								<tr>
									{% if user.fonction == 'C' %}
										<td>Commandant d'unité</td>
									{% elseif user.fonction == 'A' %}
										<td>Commandant d'unité en second</td>
									{% elseif user.fonction == 'E' %}
										<td></td>
									{% elseif user.fonction == 'S' %}
										<td>Second</td>
									{% else %}
										<td>
											{{ user.fonction }}
										</td>
									{% endif %}
									<td>{{ user.grade }}</td>
									<td>{{ user.nom ~ " " ~ user.prenom }}</td>
									<td>{{ user.qualification ~ (user.specificite != "" ? " " ~ user.specificite : "")}}</td>
									<td>{{ user.tph }}</td>
									<td>{{ user.port }}</td>
									<td>{{ user.mail }}</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>

				{% endif %}

			{% endfor %}

		</ul>

	</main>

{% endblock %}
{% if interface == "web" %}
</body></html>{% endif %}
